<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  tools:context="com.esti.app.scrumesti.feature.MainActivity"
  tools:showIn="@layout/activity_main">

  <fragment
    android:id="@+id/results_fragment"
    android:layout_width="0dp"
    android:layout_height="0dp"
    android:name="com.esti.app.scrumesti.feature.ResultsFragment"
    app:layout_constraintBottom_toTopOf="@+id/estimations_fragment"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintVertical_weight="3"/>

  <fragment
    android:id="@+id/estimations_fragment"
    android:layout_width="0dp"
    android:layout_height="0dp"
    android:name="com.esti.app.scrumesti.feature.EstimationsFragment"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toBottomOf="@+id/results_fragment"
    app:layout_constraintVertical_weight="2"/>

</android.support.constraint.ConstraintLayout>
